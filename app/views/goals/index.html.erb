<p id="notice"><%= notice %></p>

<h1>Goals</h1>

<table>
  <thead>
    <tr>
      <th>Game</th>
      <th>Team</th>
      <th>Player</th>
      <th>Goalie</th>
      <th>Period</th>
      <th>Time</th>
      <th>Situation</th>
      <th colspan="7"></th>
    </tr>
  </thead>

  <tbody>
    <% @goals.each do |goal| %>
    <tr>
      <td><%= goal.game_id %></td>
      <td><%= goal.team_id %></td>
      <td><%= goal.player_id %></td>
      <td><%= goal.goalie_id %></td>
      <td><%= goal.period %></td>
      <td><%= goal.time %></td>
      <td><%= goal.situation %></td>
      <td><%= link_to 'Show', goal %></td>
      <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
      <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

