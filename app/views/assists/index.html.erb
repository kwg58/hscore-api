<p id="notice"><%= notice %></p>

<h1>Assists</h1>

<table>
  <thead>
    <tr>
      <th>Goal</th>
      <th>Player</th>
      <th>Assist no</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assists.each do |assist| %>
      <tr>
        <td><%= assist.goal_id %></td>
        <td><%= assist.player_id %></td>
        <td><%= assist.assist_no %></td>
        <td><%= link_to 'Show', assist %></td>
        <td><%= link_to 'Edit', edit_assist_path(assist) %></td>
        <td><%= link_to 'Destroy', assist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

